# See here for documentation:
# https://gist.github.com/dvessel/1478685

TM_RUBY = "$HOME/.rbenv/shims/ruby"
PATH = "$HOME/.rbenv/bin:$PATH"

include          = "{$include,.env*,.*.yml}"
excludeInFolderSearch = "{$excludeInFolderSearch,dist,node_modules,log,**/target,tmp}"

[ source.ruby ]
tabSize          = 2
softTabs         = true

[ text.html ]
tabSize          = 2
softTabs         = true

[ source.scss ]
tabSize          = 2
softTabs         = true

[ *.{txt,md} ]
softWrap         = true

[ text.haml ]
tabSize          = 4
softTabs         = false

[ source.yaml ]
softTabs         = true
tabSize          = 2

[ source.go ]
softTabs         = false
tabSize          = 4

[ *.da.* ]
spellingLanguage = 'da'

[ *.en.* ]
spellingLanguage = 'en'

[ source.coffee ]
tabSize          = 8
softTabs         = false

[ comment ]
spellChecking    = true
